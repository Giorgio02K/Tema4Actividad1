<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#673AB7"
        app:title="@string/t4_a1_jordichorro"
        tools:ignore="BottomAppBar,MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/appBar"
        android:backgroundTint="@color/black">

        <FrameLayout
            android:id="@+id/recuadroGris"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">


            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@color/white"
                android:gravity="end"
                />


            <TextView
                android:id="@+id/numeroCalcular"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:text="0"

                />
    </FrameLayout>

    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="56dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        android:layout_marginLeft="22dp"/>

    <Button
        android:id="@+id/btnSuma"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="56dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="+"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        android:layout_marginLeft="22dp"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="56dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="7"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="56dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        android:layout_marginLeft="22dp"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="148dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        android:layout_marginLeft="22dp"/>

    <Button
        android:id="@+id/btnResta"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="148dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="-"
        app:layout_constraintLeft_toRightOf="@id/btn6"
        android:layout_marginLeft="22dp"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="148dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="148dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        android:layout_marginLeft="22dp" />


    <Button
        android:id="@+id/btn3"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="236dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        android:layout_marginLeft="22dp"/>

    <Button
        android:id="@+id/btnMulti"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="236dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="X"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        android:layout_marginLeft="22dp"/>

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="324dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="."
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="236dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        android:layout_marginLeft="22dp"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="324dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="C"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        android:layout_marginLeft="22dp"
        />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="324dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="/"
        app:layout_constraintLeft_toRightOf="@id/btnClear"
        android:layout_marginLeft="22dp"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="236dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="324dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        tools:ignore="MissingConstraints"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@id/btnPunto"
        android:layout_marginLeft="22dp"
        />

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="354dp"
        android:layout_height="67dp"
        android:gravity="center"
        app:cornerRadius="10dp"
        app:layout_goneMarginTop="30dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:text="="

        />


</androidx.constraintlayout.widget.ConstraintLayout>